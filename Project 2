<span style="color: #008800; font-weight: bold">def</span> <span style="color: #0066BB; font-weight: bold">addInventory</span>():
    <span style="color: #008800; font-weight: bold">global</span> Rose_num
    <span style="color: #008800; font-weight: bold">global</span> Tulip_num
    <span style="color: #008800; font-weight: bold">global</span> Jasmine_num
    <span style="color: #008800; font-weight: bold">global</span> Green_num
    <span style="color: #008800; font-weight: bold">global</span> Vase_num
    <span style="color: #008800; font-weight: bold">global</span> Sale_num
    <span style="color: #008800; font-weight: bold">global</span> Expense_num

    <span style="color: #008800; font-weight: bold">if</span> add_rose<span style="color: #333333">.</span>get() <span style="color: #333333">==</span> <span style="color: #0000DD; font-weight: bold">1</span>:
        Rose_num <span style="color: #333333">=</span> Rose_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">100</span>
        Expense_num <span style="color: #333333">=</span> Expense_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">100</span>

    <span style="color: #008800; font-weight: bold">if</span> add_tulip<span style="color: #333333">.</span>get() <span style="color: #333333">==</span> <span style="color: #0000DD; font-weight: bold">1</span>:
        Tulip_num <span style="color: #333333">=</span> Tulip_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">100</span>
        Expense_num <span style="color: #333333">=</span> Expense_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">75</span>

    <span style="color: #008800; font-weight: bold">if</span> add_jasmine<span style="color: #333333">.</span>get() <span style="color: #333333">==</span> <span style="color: #0000DD; font-weight: bold">1</span>: 
        Jasmine_num <span style="color: #333333">=</span> Jasmine_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">100</span>
        Expense_num <span style="color: #333333">=</span> Expense_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">85</span>

    <span style="color: #008800; font-weight: bold">if</span> add_green<span style="color: #333333">.</span>get() <span style="color: #333333">==</span> <span style="color: #0000DD; font-weight: bold">1</span>:
        Green_num <span style="color: #333333">=</span> Green_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">100</span>
        Expense_num <span style="color: #333333">=</span> Expense_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">65</span>

    <span style="color: #008800; font-weight: bold">if</span> add_vase<span style="color: #333333">.</span>get() <span style="color: #333333">==</span> <span style="color: #0000DD; font-weight: bold">1</span>:
        Vase_num <span style="color: #333333">=</span> Vase_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">10</span> 
        Expense_num <span style="color: #333333">=</span> Expense_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">50</span>

    rose_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span>Rose_num)
    tulip_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span>Tulip_num)
    jasmine_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span>Jasmine_num)
    green_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span>Green_num)
    vase_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span>Vase_num)
    expenses_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span><span style="background-color: #fff0f0">&#39;${:,.2f}&#39;</span><span style="color: #333333">.</span>format(Expense_num))

    sale1 <span style="color: #333333">=</span> Sale_num
    expense1 <span style="color: #333333">=</span> Expense_num

    profit1 <span style="color: #333333">=</span> sale1 <span style="color: #333333">-</span> expense1

    profit_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span><span style="background-color: #fff0f0">&#39;${:,.2f}&#39;</span><span style="color: #333333">.</span>format(profit1))


<span style="color: #008800; font-weight: bold">def</span> <span style="color: #0066BB; font-weight: bold">AddOrder</span> (): 

    <span style="color: #008800; font-weight: bold">global</span> Order_num

    rose1 <span style="color: #333333">=</span> <span style="color: #007020">int</span>(rose_order<span style="color: #333333">.</span>get())
    tulip1 <span style="color: #333333">=</span> <span style="color: #007020">int</span>(tulip_order<span style="color: #333333">.</span>get())
    jasmine1 <span style="color: #333333">=</span> <span style="color: #007020">int</span>(jasmine_order<span style="color: #333333">.</span>get())
    green1 <span style="color: #333333">=</span> <span style="color: #007020">int</span>(greenery_order<span style="color: #333333">.</span>get())

    <span style="color: #008800; font-weight: bold">if</span> rose1 <span style="color: #333333">!=</span> <span style="color: #0000DD; font-weight: bold">0</span> <span style="color: #000000; font-weight: bold">or</span> tulip1 <span style="color: #333333">!=</span> <span style="color: #0000DD; font-weight: bold">0</span> <span style="color: #000000; font-weight: bold">or</span> jasmine1 <span style="color: #333333">!=</span> <span style="color: #0000DD; font-weight: bold">0</span> <span style="color: #000000; font-weight: bold">or</span> green1 <span style="color: #333333">!=</span> <span style="color: #0000DD; font-weight: bold">0</span>:
        Order_num <span style="color: #333333">=</span> Order_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">1</span>
        Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;BEGIN ORDER BATCH NUMBER:&quot;</span>, Order_num)
        Vase_list<span style="color: #333333">.</span>append(<span style="color: #0000DD; font-weight: bold">1</span>)
        Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;Vase added:&quot;</span>, <span style="color: #0000DD; font-weight: bold">1</span>)

        Rose_list<span style="color: #333333">.</span>append(rose1)
        Tulip_list<span style="color: #333333">.</span>append(tulip1)
        Jasmine_list<span style="color: #333333">.</span>append(jasmine1)
        Green_list<span style="color: #333333">.</span>append(green1)


        <span style="color: #008800; font-weight: bold">if</span> rose1 <span style="color: #333333">!=</span> <span style="color: #0000DD; font-weight: bold">0</span>:
            Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;Roses added:&quot;</span>, rose1)

        <span style="color: #008800; font-weight: bold">if</span> tulip1 <span style="color: #333333">!=</span> <span style="color: #0000DD; font-weight: bold">0</span>:
            Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;Tulips added:&quot;</span>, tulip1)

        <span style="color: #008800; font-weight: bold">if</span> jasmine1 <span style="color: #333333">!=</span> <span style="color: #0000DD; font-weight: bold">0</span>: 
            Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;Jasmine added:&quot;</span>, jasmine1)    

        <span style="color: #008800; font-weight: bold">if</span> green1 <span style="color: #333333">!=</span> <span style="color: #0000DD; font-weight: bold">0</span>:
            Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;Greens added:&quot;</span>, green1)

    <span style="color: #008800; font-weight: bold">else</span>: 

        Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;NO ORDER INSERTED&quot;</span>, <span style="background-color: #fff0f0">&quot;LATEST BATCH NUM:&quot;</span>, Order_num)


<span style="color: #008800; font-weight: bold">def</span> <span style="color: #0066BB; font-weight: bold">CancelOrder</span>():

    <span style="color: #008800; font-weight: bold">global</span> Order_num 
    
    Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;ORDER BATCH DELETED:&quot;</span>, Order_num)

    Order_num <span style="color: #333333">=</span> Order_num <span style="color: #333333">-</span> <span style="color: #0000DD; font-weight: bold">1</span>

    <span style="color: #008800; font-weight: bold">del</span> Rose_list [Order_num]
    <span style="color: #008800; font-weight: bold">del</span> Tulip_list [Order_num]
    <span style="color: #008800; font-weight: bold">del</span> Jasmine_list [Order_num]
    <span style="color: #008800; font-weight: bold">del</span> Green_list [Order_num]
    <span style="color: #008800; font-weight: bold">del</span> Vase_list [Order_num]



<span style="color: #008800; font-weight: bold">def</span> <span style="color: #0066BB; font-weight: bold">PlaceOrder</span>():
    <span style="color: #008800; font-weight: bold">global</span> Rose_num
    <span style="color: #008800; font-weight: bold">global</span> Tulip_num
    <span style="color: #008800; font-weight: bold">global</span> Jasmine_num
    <span style="color: #008800; font-weight: bold">global</span> Green_num
    <span style="color: #008800; font-weight: bold">global</span> Vase_num 
    <span style="color: #008800; font-weight: bold">global</span> Sale_num
    <span style="color: #008800; font-weight: bold">global</span> Expense_num
    <span style="color: #008800; font-weight: bold">global</span> Order_num
    <span style="color: #008800; font-weight: bold">global</span> Track_count

    rose2 <span style="color: #333333">=</span> <span style="color: #007020">sum</span>(Rose_list)
    tulip2 <span style="color: #333333">=</span> <span style="color: #007020">sum</span>(Tulip_list)
    jasmine2 <span style="color: #333333">=</span> <span style="color: #007020">sum</span>(Jasmine_list)
    green2 <span style="color: #333333">=</span> <span style="color: #007020">sum</span>(Green_list)
    vase2 <span style="color: #333333">=</span> <span style="color: #007020">sum</span>(Vase_list)

    Rose_track<span style="color: #333333">.</span>append(rose2)
    Tulip_track<span style="color: #333333">.</span>append(tulip2)
    Jasmine_track<span style="color: #333333">.</span>append(jasmine2)
    Green_track<span style="color: #333333">.</span>append(green2)
    Vase_track<span style="color: #333333">.</span>append(vase2)

    Track_count <span style="color: #333333">=</span> Track_count <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">1</span>

    <span style="color: #008800; font-weight: bold">if</span> Track_count <span style="color: #333333">&gt;</span> <span style="color: #0000DD; font-weight: bold">1</span>: 

        rose3 <span style="color: #333333">=</span> Rose_track[Track_count<span style="color: #333333">-</span><span style="color: #0000DD; font-weight: bold">1</span>] <span style="color: #333333">-</span> Rose_track[Track_count<span style="color: #333333">-</span><span style="color: #0000DD; font-weight: bold">2</span>]
        tulip3 <span style="color: #333333">=</span> Tulip_track[Track_count<span style="color: #333333">-</span><span style="color: #0000DD; font-weight: bold">1</span>] <span style="color: #333333">-</span> Tulip_track[Track_count<span style="color: #333333">-</span><span style="color: #0000DD; font-weight: bold">2</span>]
        jasmine3 <span style="color: #333333">=</span> Jasmine_track[Track_count<span style="color: #333333">-</span><span style="color: #0000DD; font-weight: bold">1</span>] <span style="color: #333333">-</span> Jasmine_track[Track_count<span style="color: #333333">-</span><span style="color: #0000DD; font-weight: bold">2</span>]
        green3 <span style="color: #333333">=</span> Green_track[Track_count<span style="color: #333333">-</span><span style="color: #0000DD; font-weight: bold">1</span>] <span style="color: #333333">-</span> Green_track[Track_count<span style="color: #333333">-</span><span style="color: #0000DD; font-weight: bold">2</span>]
        vase3 <span style="color: #333333">=</span> Vase_track[Track_count<span style="color: #333333">-</span><span style="color: #0000DD; font-weight: bold">1</span>] <span style="color: #333333">-</span> Vase_track[Track_count<span style="color: #333333">-</span><span style="color: #0000DD; font-weight: bold">2</span>]

    <span style="color: #008800; font-weight: bold">else</span>:

        rose3 <span style="color: #333333">=</span> rose2
        tulip3 <span style="color: #333333">=</span> tulip2
        jasmine3 <span style="color: #333333">=</span> jasmine2
        green3 <span style="color: #333333">=</span> green2
        vase3 <span style="color: #333333">=</span> vase2

    Calc_Rose <span style="color: #333333">=</span> Rose_num
    Calc_Tulip <span style="color: #333333">=</span> Tulip_num
    Calc_Jasmine <span style="color: #333333">=</span> Jasmine_num
    Calc_Green <span style="color: #333333">=</span> Green_num
    Calc_Vase <span style="color: #333333">=</span> Vase_num

    Rose_num <span style="color: #333333">=</span> (Calc_Rose <span style="color: #333333">-</span> rose3)
    Tulip_num <span style="color: #333333">=</span> (Calc_Tulip <span style="color: #333333">-</span> tulip3)
    Jasmine_num <span style="color: #333333">=</span> (Calc_Jasmine <span style="color: #333333">-</span> jasmine3)
    Green_num <span style="color: #333333">=</span> (Calc_Green <span style="color: #333333">-</span> green3)

    <span style="color: #008800; font-weight: bold">if</span> Rose_num <span style="color: #333333">&gt;=</span> <span style="color: #0000DD; font-weight: bold">0</span> <span style="color: #000000; font-weight: bold">and</span> Tulip_num <span style="color: #333333">&gt;=</span> <span style="color: #0000DD; font-weight: bold">0</span> <span style="color: #000000; font-weight: bold">and</span> Jasmine_num <span style="color: #333333">&gt;=</span> <span style="color: #0000DD; font-weight: bold">0</span> <span style="color: #000000; font-weight: bold">and</span> Green_num <span style="color: #333333">&gt;=</span> <span style="color: #0000DD; font-weight: bold">0</span>:
       
        <span style="color: #008800; font-weight: bold">while</span> <span style="color: #008800; font-weight: bold">True</span>:

            <span style="color: #008800; font-weight: bold">try</span>:

                <span style="color: #008800; font-weight: bold">if</span> rose3 <span style="color: #333333">==</span> <span style="color: #0000DD; font-weight: bold">0</span> <span style="color: #000000; font-weight: bold">and</span> tulip3 <span style="color: #333333">==</span> <span style="color: #0000DD; font-weight: bold">0</span> <span style="color: #000000; font-weight: bold">and</span> jasmine3 <span style="color: #333333">==</span> <span style="color: #0000DD; font-weight: bold">0</span> <span style="color: #000000; font-weight: bold">and</span> green3 <span style="color: #333333">==</span> <span style="color: #0000DD; font-weight: bold">0</span> <span style="color: #000000; font-weight: bold">and</span> vase3 <span style="color: #333333">==</span> <span style="color: #0000DD; font-weight: bold">0</span>:
                    Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;NO CHANGES DETECTED&quot;</span>, <span style="background-color: #fff0f0">&quot;ORDER NOT PROCESSED&quot;</span>, <span style="background-color: #fff0f0">&quot;LATEST BATCH NUM:&quot;</span>, Order_num)
                    <span style="color: #008800; font-weight: bold">break</span>

                <span style="color: #008800; font-weight: bold">else</span>: 
                    Vase_num <span style="color: #333333">=</span> Calc_Vase <span style="color: #333333">-</span> vase3
                    Sale_num <span style="color: #333333">=</span> Sale_num <span style="color: #333333">+</span> <span style="color: #0000DD; font-weight: bold">30</span>
                    Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;ORDER BATCH(ES) PROCESSED&quot;</span>, <span style="background-color: #fff0f0">&quot;LATEST BATCH NUM:&quot;</span>, Order_num)

                    rose_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span>Rose_num)
                    tulip_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span>Tulip_num)
                    jasmine_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span>Jasmine_num)
                    green_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span>Green_num)
                    vase_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span>Vase_num)
                    sales_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span><span style="background-color: #fff0f0">&#39;${:,.2f}&#39;</span><span style="color: #333333">.</span>format(Sale_num))

                    sale1 <span style="color: #333333">=</span> Sale_num
                    expense1 <span style="color: #333333">=</span> Expense_num

                    profit1 <span style="color: #333333">=</span> sale1 <span style="color: #333333">-</span> expense1

                    profit_output<span style="color: #333333">.</span>config(text<span style="color: #333333">=</span><span style="background-color: #fff0f0">&#39;${:,.2f}&#39;</span><span style="color: #333333">.</span>format(profit1))
                    <span style="color: #008800; font-weight: bold">break</span>
            <span style="color: #008800; font-weight: bold">except</span>: 
                Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;SEVERE ERROR DETECTED&quot;</span>, <span style="background-color: #fff0f0">&quot;ORDER NOT PROCESSED&quot;</span>, <span style="background-color: #fff0f0">&quot;LATEST BATCH NUM:&quot;</span>, Order_num)


    <span style="color: #008800; font-weight: bold">else</span>: 
         Order<span style="color: #333333">.</span>insert(END, <span style="background-color: #fff0f0">&quot;ORDER BATCH(ES) NOT PROCESSED&quot;</span>, <span style="background-color: #fff0f0">&quot;ADD INENTORY OR CANCEL ORDER&quot;</span>, <span style="background-color: #fff0f0">&quot;LATEST BATCH NUM:&quot;</span>, Order_num)
         Rose_num <span style="color: #333333">=</span> Calc_Rose
         Tulip_num <span style="color: #333333">=</span> Calc_Tulip 
         Jasmine_num <span style="color: #333333">=</span> Calc_Jasmine 
         Green_num <span style="color: #333333">=</span> Calc_Green
