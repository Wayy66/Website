root<span style="color: #333333">.</span>geometry(<span style="background-color: #fff0f0">&quot;1000x600&quot;</span>) 

<span style="color: #888888">#To track the number of order(s) added or deleted</span>
Order_num <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">0</span>

Rose_num <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">0</span>
Tulip_num <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">0</span>
Jasmine_num <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">0</span>
Green_num <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">0</span>
Vase_num <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">0</span>
Sale_num <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">0</span>
Expense_num <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">0</span>

Rose_list <span style="color: #333333">=</span> []
Tulip_list <span style="color: #333333">=</span> []
