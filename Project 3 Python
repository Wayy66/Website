pastOrdersFrame<span style="color: #333333">.</span>grid(row<span style="color: #333333">=</span><span style="color: #0000DD; font-weight: bold">15</span>, rowspan<span style="color: #333333">=</span><span style="color: #0000DD; font-weight: bold">4</span>, column<span style="color: #333333">=</span><span style="color: #0000DD; font-weight: bold">0</span>, sticky<span style="color: #333333">=</span>W, columnspan <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">5</span>)
scrollbar <span style="color: #333333">=</span> Scrollbar(pastOrdersFrame)
scrollbar<span style="color: #333333">.</span>pack(side<span style="color: #333333">=</span>RIGHT, fill<span style="color: #333333">=</span>Y)
pastOrders <span style="color: #333333">=</span> Listbox(pastOrdersFrame, height<span style="color: #333333">=</span><span style="color: #0000DD; font-weight: bold">5</span>, width <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">40</span>, yscrollcommand<span style="color: #333333">=</span>scrollbar<span style="color: #333333">.</span>set)
pastOrders<span style="color: #333333">.</span>pack()
scrollbar<span style="color: #333333">.</span>config(command<span style="color: #333333">=</span>pastOrders<span style="color: #333333">.</span>yview)
 
<span style="color: #888888"># Setting up buttons</span>
Button(root, text <span style="color: #333333">=</span> <span style="background-color: #fff0f0">&quot;Add to Order&quot;</span>, command <span style="color: #333333">=</span> fnAddToOrder)<span style="color: #333333">.</span>grid(row <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">5</span>, column <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">7</span>, sticky <span style="color: #333333">=</span>W)
Button(root, text <span style="color: #333333">=</span> <span style="background-color: #fff0f0">&quot;Add To Inventory&quot;</span>, command <span style="color: #333333">=</span> fnAddInventory)<span style="color: #333333">.</span>grid(row <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">6</span>, column <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">3</span>, sticky <span style="color: #333333">=</span>W)
Button(root, text <span style="color: #333333">=</span> <span style="background-color: #fff0f0">&quot;Place Order&quot;</span>, command <span style="color: #333333">=</span> fnPlaceOrder)<span style="color: #333333">.</span>grid(row <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">12</span>, column <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">6</span>, sticky <span style="color: #333333">=</span> W)
Button(root, text <span style="color: #333333">=</span> <span style="background-color: #fff0f0">&quot;Cancel Order&quot;</span>, command <span style="color: #333333">=</span> fnCancelOrder)<span style="color: #333333">.</span>grid(row <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">12</span>, column <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">7</span>, sticky <span style="color: #333333">=</span> W)
Button(root, text <span style="color: #333333">=</span> <span style="background-color: #fff0f0">&quot;Show Order Details&quot;</span>, command <span style="color: #333333">=</span> fnDisplayDetails)<span style="color: #333333">.</span>grid(row <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">20</span>, column <span style="color: #333333">=</span> <span style="color: #0000DD; font-weight: bold">0</span>, sticky <span style="color: #333333">=</span> W)
 
fnOpenDatabase()
fnRetrieveData()
fnDisplayPastOrders()
 
<span style="color: #888888"># Run the window </span>
root<span style="color: #333333">.</span>mainloop()
